{
  "name": "lumesquare-backend",
  "version": "1.0.0",
  "description": "Stablecoin-Powered P2P Marketplace Backend",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "test": "jest --config jest.config.js --setupFiles ./test/setup.ts",
    "test:watch": "jest --watch --config jest.config.js --setupFiles ./test/setup.ts",
    "test:coverage": "jest --coverage --config jest.config.js --setupFiles ./test/setup.ts",
    "migrate": "ts-node src/db/migrations/index.ts",
    "setup:dev": "npm run lint:fix && npm run build && npm run migrate",
    "postinstall": "npm run build"
  },
  "keywords": [
    "solana",
    "marketplace",
    "stablecoin",
    "p2p",
    "escrow"
  ],
  "author": "Lumesquare Team",
  "license": "ISC",
  "dependencies": {
    "@circle-fin/circle-sdk": "^2.9.0",
    "@solana/spl-token": "^0.3.8",
    "@solana/web3.js": "^1.78.4",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.1",
    "tweetnacl": "^1.0.3",
    "typescript": "^5.2.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bs58": "^4.0.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.6.0",
    "@types/pg": "^8.10.2",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.1",
    "ts-node-dev": "^2.0.0"
  }
}
