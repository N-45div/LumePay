# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
# Use your existing PostgreSQL password
DB_PASSWORD=your_postgres_password
DB_DATABASE=solanahack
DB_SCHEMA=public
DB_SYNCHRONIZE=true

# For local testing, we enable synchronize
# This will automatically create tables based on your entities
# Note: Don't use this in production!

# For production, set these values appropriately
# DB_HOST=your-production-host.example.com
# DB_PORT=5432
# DB_USERNAME=your_production_username
# DB_PASSWORD=your_strong_password
# DB_DATABASE=solanahack_prod
# DB_SCHEMA=public
# DB_SYNCHRONIZE=false

# SSL Configuration for Production DB
DB_SSL=false
# DB_SSL=true
# DB_SSL_CA=/path/to/ca.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_CERT=/path/to/client-cert.pem

# Stripe Keys (For Payment Processing)
STRIPE_API_KEY=sk_test_your_test_key
STRIPE_PUBLIC_KEY=pk_test_your_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_for_testing
JWT_EXPIRATION=3600

# Application
PORT=3000
NODE_ENV=development
API_PREFIX=/api/v1
APP_URL=http://localhost:3000
